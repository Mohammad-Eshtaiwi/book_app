<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>view books</title>
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"
        />
        <link rel="stylesheet" href="./styles/main.css" />
    </head>

    <body>
        <%- include('../layouts/header') %>
        <main>
            <section class="title text-center">
                <h3>Rearch Results</h3>
            </section>

            <section class="books">
                <% books.forEach(book => { %>

                <article class="book text-center spacing">
                    <img
                        src=" <%= book.image_url %> "
                        alt=" <%= book.title %> "
                    />
                    <h2><%= book.title %></h2>
                    <h3><%= book.authors %></h3>
                    <p class="description"><%= book.description %></p>
                    <p><%= book.isbn %></p>

                    <!-- hidden form -->
                    <form action="/addBook" method="post">
                        <input
                            type="hidden"
                            name="title"
                            value=" <%= book.title %> "
                        />
                        <input
                            type="hidden"
                            name="image_url"
                            value="  <%= book.image_url %>"
                        />
                        <input
                            type="hidden"
                            name="author"
                            value=" <%= book.authors %> "
                        />
                        <input
                            type="hidden"
                            name="isbn"
                            value=" <%= book.isbn %> "
                        />
                        <input
                            type="hidden"
                            name="description"
                            value=" <%= book.description %> "
                        />
                        <textarea
                            name="description"
                            id="description"
                            class="d-none"
                        ></textarea>
                        <button type="submit">Add Book</button>
                    </form>
                </article>

                <% }) %> <%= %>
            </section>
        </main>
        <ul></ul>
    </body>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="./js/app.js"></script>
</html>
